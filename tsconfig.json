{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "incremental": true,
        "module": "ESNext",
        "rootDir": "./src",
        "outDir": "dist",
        "sourceMap": true,
        "target": "ES2015",
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": ["./src"],
    "exclude": ["node_modules", "dist"]
}