{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "incremental": true,
        "module": "ES2020",
        "rootDir": "./src",
        "outDir": "dist",
        "sourceMap": true,
        "target": "ES2020",
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "typeAcquisition": {
        "enable": true,
        "include": [
            "@ygoe/msgpack"
        ]
    }
}